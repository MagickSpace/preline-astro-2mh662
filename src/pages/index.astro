---
import Layout from '../layouts/Layout.astro';
import Accordion from '../components/Accordion.astro';
import Collapse from '../components/Collapse.astro';
import Tabs from '../components/Tabs.astro';
import ScrollSpy from '../components/ScrollSpy.astro';
import MegaMenu from '../components/MegaMenu.astro';
import Dropdown from '../components/Dropdown.astro';
import Modal from '../components/Modal.astro';
import Offcanvas from '../components/Offcanvas.astro';
import Sidebar from '../components/Sidebar.astro';
import Popover from '../components/Popover.astro';
import Tooltip from '../components/Tooltip.astro';
import RemoveElement from '../components/RemoveElement.astro';
---

<Layout title="Preline - Astro">
	<main>
		<div class="mb-8">
			<h2 class="mb-4">Accordion</h2>
			<Accordion />
		</div>

		<div class="mb-8">
			<h2 class="mb-4">Collapse</h2>
			<Collapse />
		</div>

		<div class="mb-8">
			<h2 class="mb-4">Tabs</h2>
			<Tabs />
		</div>

		<div class="mb-8">
			<h2 class="mb-4">ScrollSpy</h2>
			<ScrollSpy />
		</div>

		<div class="mb-8">
			<h2 class="mb-4">MegaMenu</h2>
			<MegaMenu />
		</div>

		<div class="mb-8">
			<h2 class="mb-4">Dropdown</h2>
			<Dropdown />
		</div>

		<div class="mb-8">
			<h2 class="mb-4">Modal</h2>
			<Modal />
		</div>

		<div class="mb-8">
			<h2 class="mb-4">Offcanvas</h2>
			<Offcanvas />
		</div>

		<div class="mb-8">
			<h2 class="mb-4">Sidebar</h2>
			<Sidebar />
		</div>

		<div class="mb-8">
			<h2 class="mb-4">Popover</h2>
			<Popover />
		</div>

		<div class="mb-8">
			<h2 class="mb-4">Tooltip</h2>
			<Tooltip />
		</div>

		<div class="mb-8">
			<h2 class="mb-4">RemoveElement</h2>
			<RemoveElement />
		</div>
	</main>
</Layout>

<style>
	main {
		padding: 1rem;
	}
</style>